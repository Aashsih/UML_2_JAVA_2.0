<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projectName"
        android:layout_gravity="center_horizontal"
        android:hint="Enter the project name:"
        android:clickable="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Project"
        android:id="@+id/saveProjectTest"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:onClick="onSaveProjectTest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Project"
        android:id="@+id/shareProject"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:onClick="onShareProject" />
</LinearLayout>